<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- CAWL Gateway Factory -->
        <service id="waaz_sylius_cawl_plugin.payum.cawl_gateway_factory" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder" public="true">
            <argument>Waaz\SyliusCawlPlugin\Payum\CawlGateway\CawlGatewayFactory</argument>
            <tag name="payum.gateway_factory_builder" factory="cawl" />
        </service>
        <!-- CAWL Gateway Configuration Form Type -->
        <service id="waaz_sylius_cawl_plugin.form.type.cawl_gateway_configuration" class="Waaz\SyliusCawlPlugin\Form\Type\CawlGatewayConfigurationType">
            <tag name="sylius.gateway_configuration_type" type="cawl" label="CAWL (CrÃ©dit Agricole)" />
            <tag name="form.type" />
        </service>

        <!-- CAWL Payum Actions -->
        <service id="waaz_sylius_cawl_plugin.payum.action.capture" class="Waaz\SyliusCawlPlugin\Payum\CawlGateway\Action\CaptureAction" public="true">
            <tag name="payum.action" factory="cawl" alias="payum.action.capture" />
        </service>

        <service id="waaz_sylius_cawl_plugin.payum.action.notify" class="Waaz\SyliusCawlPlugin\Payum\CawlGateway\Action\NotifyAction" public="true">
            <tag name="payum.action" factory="cawl" alias="payum.action.notify" />
        </service>

        <service id="waaz_sylius_cawl_plugin.payum.action.status" class="Waaz\SyliusCawlPlugin\Payum\CawlGateway\Action\StatusAction" public="true">
            <tag name="payum.action" factory="cawl" alias="payum.action.status" />
        </service>

        <service id="waaz_sylius_cawl_plugin.payum.action.webhook_processor" class="Waaz\SyliusCawlPlugin\Payum\CawlGateway\Action\Api\WebhookProcessorAction" public="true">
            <tag name="payum.action" factory="cawl" alias="payum.action.webhook_processor" />
        </service>

        <service id="waaz_sylius_cawl_plugin.payum.extension.update_payment_state" class="Waaz\SyliusCawlPlugin\Payum\CawlGateway\Extension\UpdatePaymentStateExtension" public="true">
            <argument type="service" id="sm.factory" />
            <argument type="service" id="payum.storage.waaz_sylius_payment"/>
            <argument type="service" id="sylius.factory.payum_get_status_action" />
            <tag name="payum.extension" factory="cawl" alias="waaz_sylius_cawl_plugin.payum.extension.update_payment_state" />
        </service>
    </services>
</container>
